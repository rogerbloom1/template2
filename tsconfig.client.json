        "outDir": ".public/js",
        "noImplicitAny": true,
        "module": "ES6",
        "target": "ES5",
        "jsx": "react",
        "allowSyntheticDefaultImports": true,
        "allowJS": true,
        "lib:": [
            "ES2015", "DOM"
        ]
    },
    "include": [
        "src/client/**/*"
    ],
    "exclude": ["node_modules"]
}